*@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BTL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BTL.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>
<body>
    @{
        var tenDN = Context.Session.GetString("TenDN");
        var vaiTro = Context.Session.GetString("VaiTro");
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">GoVN</a>

                <!-- Nút toggle trên mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                   
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                      


                        @if (vaiTro == "ThueXe")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Xe" asp-action="Search">Tìm xe</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="DatXe" asp-action="Index1">Đang thuê</a>
                            </li>
                        }

                        
                        @if (vaiTro == "ChuXe")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Chuxe" asp-action="Index">Đăng tin cho thuê</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="LienHe">Liên hệ</a>
                        </li>
                    </ul>

                    <div class="text-end">
                        @if (!string.IsNullOrEmpty(tenDN))
                        {
                            <!-- Dropdown menu tài khoản -->
                            <div class="dropdown">
                                <button class="btn btn-light border dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle text-primary"></i> 
                                    <span class="fw-semibold">@tenDN</span>
                                    <small class="text-muted">(@vaiTro)</small>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userMenu">
                                    <li>
                                    @if (vaiTro == "ThueXe")
                                    {
                                        <a class="dropdown-item" asp-controller="Member" asp-action="ChinhSua">
                                                    <i class="bi bi-person-gear"></i> Chỉnh sửa tài khoản</a>
                                    }

                                    
                                    @if (vaiTro == "ChuXe")
                                    {
                                        <a class="dropdown-item" asp-controller="Member" asp-action="ChinhSua">
                                                    <i class="bi bi-person-gear"></i> Chỉnh sửa tài khoản</a>
                                    }
                                    </li>
                                    <li><a class="dropdown-item" asp-controller="Member" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Đăng xuất</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Member" asp-action="DangNhap" class="btn btn-outline-primary me-2">
                                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                            </a>
                            <a asp-controller="Member" asp-action="DangKy" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> Đăng ký
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - GoVN - <a asp-controller="Home" asp-action="Privacy">Chính sách</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
