@{
    Layout = "_Layout";
    ViewData["Title"] = "Trang chủ - GoVN";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning text-center mt-3">
        @TempData["Message"]
    </div>
}

<!-- Banner giới thiệu -->
<section class="hero text-center bg-light py-5">
    <div class="container">
        <h1 class="display-4 fw-bold text-primary">GoVN</h1>
        <p class="lead mt-3">Nền tảng hỗ trợ cộng đồng dùng chung phương tiện giao thông</p>
        <a href="/Xe/Search" class="btn btn-primary btn-lg mt-3">Tìm xe ngay</a>
        <a href="/Account/CheckRoleForPost" class="btn btn-outline-primary btn-lg mt-3">Đăng tin cho thuê</a>
    </div>
</section>

<!-- Lợi ích -->
<section class="benefits py-5">
    <div class="container text-center">
        <h2 class="mb-4 fw-bold text-secondary">Vì sao nên chọn GoVN?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <i class="bi bi-cash-stack fs-1 text-primary"></i>
                <h5 class="mt-3">Tiết kiệm chi phí</h5>
                <p>Giúp bạn chia sẻ và sử dụng phương tiện linh hoạt, không cần sở hữu xe cá nhân.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-people-fill fs-1 text-primary"></i>
                <h5 class="mt-3">Kết nối cộng đồng</h5>
                <p>Tạo niềm tin giữa người cho thuê và người thuê qua hệ thống đánh giá, bình luận.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-globe2 fs-1 text-primary"></i>
                <h5 class="mt-3">Bảo vệ môi trường</h5>
                <p>Giảm lượng xe lưu thông, tiết kiệm nhiên liệu và giảm khí thải CO₂.</p>
            </div>
        </div>
    </div>
</section>

<!-- Danh sách xe nổi bật -->
<section class="featured py-5 bg-light">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center text-secondary">Phương tiện nổi bật</h2>
        <div class="row g-4">
            @* Lặp qua danh sách xe từ Controller *@
            @if (ViewBag.FeaturedCars != null)
            {
                foreach (var xe in ViewBag.FeaturedCars)
                {
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100">
                            <img src="@xe.AnhXe" class="card-img-top" alt="@xe.TenXe" />
                            <div class="card-body">
                                <h5 class="card-title">@xe.TenXe</h5>
                                <p class="card-text text-muted">@xe.MoTa</p>
                                <p class="fw-bold text-primary">@xe.GiaThueNgay.ToString("N0") VNĐ/ngày</p>
                                <a href="/Xe/ChiTiet/@xe.MaXe" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-muted">Hiện chưa có phương tiện nào được đăng tải.</p>
            }
        </div>
    </div>
</section>

<!-- Liên hệ -->
<section class="contact py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-3 text-secondary">Liên hệ với chúng tôi</h2>
        <p class="text-muted">Bạn có thắc mắc hoặc cần hỗ trợ? Hãy gửi liên hệ cho GoVN!</p>
        <a href="/Home/Contact" class="btn btn-primary">Liên hệ ngay</a>
    </div>
</section>
</style>
