@{
}
@model BTL.Models.Class.Members;
<div class="dk">
    <link rel="stylesheet" href="~/css/dinhdang/StyleSheet.css"/>
    <h2>Đăng Ký</h2>
    <form asp-action="Create" asp-controller="Member" method="post">
        <div>
            <label>Họ và tên</label>
            <input asp-for="TenDN"/><br/>
            <span asp-validation-for="TenDN"></span>
        </div>
        <br />
        <div>
            <label>Password</label>
            <input asp-for="MatKhau" type="password"/><br />
            <span asp-validation-for="MatKhau"></span>
        </div>
        <br />
        <div>
            <label>Email</label>
            <input asp-for="Email" /><br />
            <span asp-validation-for="Email"></span>
        </div>
        <br />
       <div>
            <label>Số điện thoại</label>
            <input asp-for="SDT" /><br />
            <span asp-validation-for="SDT"></span>
       </div>
        <br />
       <div>
            <button type="submit" name="role" value="ChuXe">Đăng ký với vai trò chủ xe</button>
            <button type="submit" name="role" value="ThueXe">Đăng ký với vai trò thuê xe</button>
       </div>
       <div class="link">
            <a href="@Url.Action("DangKy","Member")">Đăng ký</a>
            /
            <a href="@Url.Action("DangNhap","Member")">Login</a>
       </div>
   
    </form>
</div>
@if (ViewBag.Mess != null)
{
    <p style="color:red">@ViewBag.Mess</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}